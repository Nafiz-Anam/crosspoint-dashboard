# Production Environment
NODE_ENV=production

# JWT secret 
NEXTAUTH_SECRET=your-super-strong-jwt-secret-minimum-32-characters

# API URLs - Use your actual domain
API_URL=http://backend:5000/v1
NEXT_PUBLIC_API_URL=http://localhost:8000/v1

# API_URL=http://crosspoint-backend:5000/v1
# NEXT_PUBLIC_API_URL=https://api.crosspointitaly.com/v1

# NextAuth - Point to your frontend subdomain
# NEXTAUTH_URL=https://app.crosspointitaly.com
NEXTAUTH_URL=http://localhost:3000

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
# NEXT_PUBLIC_APP_URL=https://app.crosspointitaly.com

# Optimization
OPTIMIZE_FONTS=true
COMPRESS=true